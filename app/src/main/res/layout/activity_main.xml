<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/home_padding"
        android:orientation="vertical">

        <Button
            android:id="@+id/btImageViewExtensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_imageviewextensions_button" />

        <Button
            android:id="@+id/btActivityExtensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_activityextensions_button"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>